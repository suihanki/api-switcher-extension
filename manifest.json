{
	"manifest_version": 2,
	"name": "Pinterest API Switcher",
	"version": "0.1",
	"background": {
		"scripts": ["background.js"]
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Switch Links"
	},
	"permissions": [
		"declarativeContent",
		"tabs",
		"contextMenus"
	],
	"icons": {
		"16": "icon.png"
	}
}